<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <title>Articulos</title>
  </head>
  <body>
    <!-- ACA VA EL HEADER -->
    <section>
      <div class="text-white">
        <header
          class="bg-dark d-flex flex-wrap align-items-space-between justify-content- justify-content-md-between py-3 mb-4 border-bottom"
        >
          <ul
            class="nav col-12 col-md-auto mb-2 justify-content-flex-start mb-md-0"
          >
            <li>
              <a href="#" class="text-white nav-link">Hack the blog</a>
            </li>
          </ul>

          <div class="col-md-3 text-end me-5">
            <button type="button" class="btn btn-primary">Admin</button>
          </div>
        </header>
      </div>
    </section>

    <!-- ACA VA EL HERO -->
    <section>
      <div>
        <div class="px-4 py-5 my-5 text-center">
          <h4 class="display-8 fw-bold"><%= article.title %></h4>
          <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">
              Creado por <%= article.author.firstname %> <%=
              article.author.lastname %> el <%= article.date %>
            </p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center"></div>
          </div>
        </div>
      </div>
    </section>
    <!--  ACA VA EL MAIN -->
    <section>
      <div class="container text-center">
        <div class="row">
          <div class="col">
            <p><%= article.content %></p>
          </div>
        </div>
      </div>
    </section>

    <!-- ACA VA EL FORM -->
    <section class="text-center container">
      <h2 class="mt-5">Add your coments</h2>
      <div class="mb-3">
        <input
          type="text"
          class="form-control"
          id="exampleFormControlInput1"
          placeholder="Name"
        />
      </div>
      <div class="mb-3">
        <textarea class="form-control" id="e" rows="3"></textarea>
        <button class="form-control bg-primary mt-3" id="" rows="3">
          SEND
        </button>
      </div>
    </section>

    <!-- ACA VAN LOS COMENTARIOS -->
    <section class="text-center">
      <h2 class="mt-5">Comentarios</h2>
      <div class="row mt-5">
        <div class="col">
          <p><%= article.comment%></p>
          <p><%= article.authorid %></p>
        </div>
      </div>
    </section>
    <!-- FOOTER -->
    <section>
      <footer
        class="d-flex flex-wrap justify-content-center align-items-center py-3 my-4 border-top"
      >
        <div class="col-md-4 d-flex align-items-center">
          <a
            href="/"
            class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1"
          >
            <svg class="bi" width="30" height="24">
              <use xlink:href="#bootstrap"></use>
            </svg>
          </a>
          <span class="mb-3 mb-md-0 text-muted">Â© 2022 Company, Inc</span>
        </div>
      </footer>
    </section>
  </body>
</html>
